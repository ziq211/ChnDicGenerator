<assembly>
  <id>${distribution.id}</id>
  <formats>
    <format>${distribution.format}</format>
  </formats>
  <includeBaseDirectory>${distribution.incBase}</includeBaseDirectory>
  <dependencySets>
    <!-- boot loader -->
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>bundles/boot</outputDirectory>
      <includes>
        <include>com.searchtechnologies.aspire:aspire-bootloader</include>
      </includes>
    </dependencySet>
    <!-- Aspire bundles -->
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.baseVersion}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>bundles/aspire</outputDirectory>
      <includes>
        <include>com.searchtechnologies.aspire:*</include>
      </includes>
      <excludes>
        <exclude>${artifact.groupId}:${artifact.artifactId}:jar:${artifact.baseVersion}</exclude>
        <exclude>com.searchtechnologies.aspire:aspire-bootloader</exclude>
      </excludes>
    </dependencySet>
    <!-- other system bundles (-> bundles/system) -->
    <dependencySet>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <unpack>false</unpack>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>bundles/system</outputDirectory>
      <includes>
        <include>org.apache.felix:org.apache.felix.configadmin</include>
        <include>org.apache.felix:org.apache.felix.http.jetty</include>
        <include>org.apache.felix:org.apache.felix.shell</include>
      </includes>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <filtered>true</filtered>
      <source>distribution-files/config/felix.properties.hadoop</source>
      <outputDirectory>config</outputDirectory>
      <destName>felix.properties</destName>
    </file>
    <file>
      <filtered>true</filtered>
      <source>distribution-files/config/settings.xml.hadoop</source>
      <outputDirectory>config</outputDirectory>
      <destName>settings.xml</destName>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>distribution-files/bundles/aspire</directory>
      <outputDirectory>bundles/aspire</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>distribution-files/bundles/system</directory>
      <outputDirectory>bundles/system</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>distribution-files/log</directory>
      <outputDirectory>log</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
